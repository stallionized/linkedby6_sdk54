{
  "expo": {
    "name": "LinkedBySix",
    "slug": "linked-by-six",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "linkedbysix",
    "web": {
      "bundler": "metro",
      "output": "single"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.linkedbysix.app",
      "newArchEnabled": false,
      "icon": {
        "light": "./assets/icons/ios-light.png",
        "dark": "./assets/icons/ios-dark.png",
        "tinted": "./assets/icons/ios-tinted.png"
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["fetch"],
        "NSContactsUsageDescription": "LinkedBySix needs access to your contacts to help you connect with people you know.",
        "NSLocationWhenInUseUsageDescription": "LinkedBySix uses your location to find businesses and services near you."
      }
    },
    "android": {
      "package": "com.linkedbysix.app",
      "newArchEnabled": true,
      "softwareKeyboardLayoutMode": "resize",
      "windowSoftInputMode": "adjustResize",
      "icon": "./assets/icon.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#0A66C2"
      },
      "permissions": [
        "READ_CONTACTS",
        "RECEIVE_BOOT_COMPLETED",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": [
      "expo-secure-store",
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.linkedbysix.app",
          "enableGooglePay": true
        }
      ],
      "expo-font",
      "expo-background-fetch",
      "expo-task-manager",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "LinkedBySix uses your location to find businesses and services near you."
        }
      ]
    ],
    "extra": {
      "stripeServerUrl": "https://stripeserver-2w6d.onrender.com",
      "eas": {
        "projectId": "dd7711ca-c7b6-4066-bd17-27f06af90a39"
      }
    }
  }
}
